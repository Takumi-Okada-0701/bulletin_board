<h1 class="text-center mb-5 mt-5">ログイン</h1>
<div class="w-25 m-auto text-center">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control',placeholder: 'メールアドレス'%>
        </div>
        <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control',placeholder: 'パスワード'%>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= f.submit 'ログイン',class: 'btn btn-primary mb-3 mt-3'%>
    <% end %>
    <%= link_to '新規登録', new_registration_path(resource_name)%>
</div>
